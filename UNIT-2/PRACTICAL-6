    <link rel="stylesheet" href="styles.css">
    <style>
        .external-text {
    color: purple;
    font-weight: bold;
    font-size: 20px;
    text-decoration: underline;
}

    </style>


    <!-- Internal CSS -->
    <style>
        /* Internal CSS targets this element */
        h1 {
            color: darkblue;
            text-align: center;
            font-family: Arial, sans-serif;
        }

        p {
            color: darkgreen;
            font-size: 18px;
        }
    </style>
</head>

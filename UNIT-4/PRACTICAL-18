<head>
    <meta charset="UTF-8">
    <title>Event Listener Example</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: darkblue;
        }

        #box {
            width: 200px;
            height: 100px;
            background-color: steelblue;
            color: white;
            line-height: 100px;
            margin: 20px auto;
            cursor: pointer;
        }

        button {
            padding: 8px 15px;
            margin: 5px;
            cursor: pointer;
        }

        input {
            padding: 8px;
            margin-top: 10px;
            width: 200px;
        }
    </style>
</head>
<body>

    <h1>JavaScript Event Listeners</h1>

    <div id="box">Hover or Click Me</div>

    <button id="addBtn">Add Click Event</button>
    <button id="removeBtn">Remove Click Event</button>

    <br><br>

    <input type="text" id="textInput" placeholder="Type something">

    <p id="output"></p>

    <script>
        let box = document.getElementById("box");
        let output = document.getElementById("output");
        let input = document.getElementById("textInput");

        function boxClicked() {
            alert("Box clicked using addEventListener()");
        }

        box.addEventListener("mouseover", function () {
            box.style.backgroundColor = "green";
        });

        box.addEventListener("mouseout", function () {
            box.style.backgroundColor = "steelblue";
        });

        document.getElementById("addBtn").addEventListener("click", function () {
            box.addEventListener("click", boxClicked);
            alert("Click event added");
        });

        document.getElementById("removeBtn").addEventListener("click", function () {
            box.removeEventListener("click", boxClicked);
            alert("Click event removed");
        });

        input.addEventListener("keyup", function (event) {
            output.innerHTML = "You typed: " + event.key;
        });
    </script>

</body>
</html>